#!/bin/bash


if ! [[ -d /scripts ]]
then
   sudo mkdir /scripts
fi


if [[ ! -e /scripts/upgrade ]]
then
	cat << EOF | sudo tee /scripts/upgrade > /dev/null
#!/bin/bash
sudo apt update
sudo apt -y upgrade
sudo apt -y full-upgrade
sudo apt -y autoremove
sudo apt -y clean
sudo apt -y purge
EOF
	sudo chmod +x /script/upgrade	
	echo "/scripts/upgrade done!"
fi

sudo apt -y install htop screen mc
